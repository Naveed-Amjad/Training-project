{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": [0, "never"],
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "space-before-function-paren": [
      "always",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never"
      }
    ],
    "multiline-ternary": "off",
    "comma-dangle": "off"
  }
}
